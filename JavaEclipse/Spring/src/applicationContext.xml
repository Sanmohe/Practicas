<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans   
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-3.1.xsd
">

<context:property-placeholder location="classpath:datosEmpresa.propiedades"></context:property-placeholder>
<!-- Esto carga archivo de propiedades en el XML -->


<bean id="informe" class="ioc.Informe"></bean>
<!-- Este bean crea la dependencia desde la clase Informe -->
<!-- En CLASS hay que poner la ruta (paquete.clase) de la clase que construye objetos de este tipo -->


<bean id="nuevoDirector" class="ioc.DirectorEmpleado">
<!-- Este bean permite crear objetos de la clase DirectorEmpleado -->
<!-- en ID se introduce el alias y en CLASS la ruta de la clase del objeto a crear -->

	<constructor-arg ref="informe"></constructor-arg>
	<!-- Dentro del bean de creación del objeto, se configura la dependencia mediante constructor -->
	<!-- En REF se introduce el ID del bean de la dependencia -->

	<property name="email" value="director@empresa.com"></property>
	<!-- Se utiliza el método SET del campo a inyectar-->
	<!-- En NAME se introduce el nombre del setter sin la palabra "set" y con la primera letra minúscula -->
	<!-- En VALUE se introduce el valor del campo -->
	
	<property name="nombreEmpresa" value="Empre S.A."></property>
</bean>

<bean id="nuevoJefe" class="ioc.JefeEmpleado">
	<constructor-arg ref="informe"></constructor-arg>
	<property name="email" value="${email}"></property>
	<!-- En este caso, se referencia al archivo de propiedades -->
	<!-- En VALUE se introduce ~$ seguido del nombre que tiene la propiedad en el archivo externo, entre llaves {} -->
	<property name="nombreEmpresa" value="${nombreEmpresa}"></property>
</bean>


<bean id="nuevoSecretario" class="ioc.SecretarioEmpleado">
	<property name="informeNuevo" ref="informe"></property>
	<!-- Dentro del bean de creación del objeto, se configura la dependencia mediante setter-->
	<!-- En NAME se introduce el nombre del setter sin la palabra "set" y con la primera letra minúscula -->
	<!-- En REF se introduce el ID del bean de la dependencia -->
	
	<property name="email" value="secretario@empresa.com"></property>
	<property name="nombreEmpresa" value="Empre S.A."></property>
</bean>







</beans>