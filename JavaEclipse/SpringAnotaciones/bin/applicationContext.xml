<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans   
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-3.1.xsd
">

	<context:component-scan base-package="ejemploAnotaciones"></context:component-scan>
	<!-- Con esta etiqueta se exige que Spring escanee todas las clases del paquete en busca de anotaciones
	En BASE-PACKAGE se introduce el nombre del paquete a escanear -->

</beans>